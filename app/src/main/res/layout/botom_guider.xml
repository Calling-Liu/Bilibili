<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:weightSum="4"
    >
    <ImageView
        android:id="@+id/nav_home_guider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/fragment02"
        android:scaleType="center"
        />
    <ImageView
        android:id="@+id/nav_tv_guider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/fragment05"
        android:scaleType="center"
        />
    <ImageView
        android:id="@+id/nav_news_guider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/fragment03"
        android:scaleType="center"
        />
    <ImageView
        android:id="@+id/nav_shop_guider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/fragment04"
        android:scaleType="center"
        />
</LinearLayout>